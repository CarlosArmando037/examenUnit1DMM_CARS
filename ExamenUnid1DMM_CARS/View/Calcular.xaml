<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenUnid1DMM_CARS.View.Calcular">

    <Grid>
        <StackLayout>
            <Label Text="Calcular IMC Y FCN" FontSize="35"
                   FontAttributes="Bold" HorizontalOptions="Center"
                   />

        </StackLayout>
        <RadioButton Value="IMC">

        </RadioButton>
        <RadioButton Value="FCN"/>
        <!--peso por altura al cuadrado-->

        <StackLayout BackgroundColor="LightBlue" Margin="0,60,0,0">
            <Label Text="opciones:"
                   FontSize="25"
                   TextColor="Black"/>
            <Grid>
                <RadioButton Value="IMC" Content="IMC" Grid.Column="0" Grid.Row="0" HorizontalOptions="Center"/>
                <RadioButton Value="FCN" Content="FCN" Grid.Column="1" Grid.Row="0"/>

            </Grid>

            <Entry Placeholder="Altura" Text="{Binding Altura}"/>
            <Entry Placeholder="Peso" Text="{Binding Peso}"/>

            <Entry Placeholder="Peso" Text="{Binding Resultado}"/>


            <Button Text="calcular"/>
        </StackLayout>
        
        
    </Grid>
</ContentPage>